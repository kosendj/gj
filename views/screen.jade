extends layout

block links
  link(href='/x-gif.html', rel='import')
  link(href='/screen.css', rel='stylesheet', type='text/css')

block scripts
  script(src='/vue.min.js', type='text/javascript')
  script(src='/jquery.min.js', type='text/javascript')
  script(src='/jquery.transit.min.js', type='text/javascript')
  script(src='/socket.io.js', type='text/javascript')

block body
  .container
  .commentContainer

  script(id='gifs', type='x-template')
    .gif(v-repeat='urls')
      x-gif(src='{{$value}}', bpm='{{bpm}}')
    .name
      p {{name}}
  script(src='/screen.js', type='text/javascript')
