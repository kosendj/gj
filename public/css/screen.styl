html, body
  margin 0
  padding 0
  background-color #000
  width 100%
  height 100%
  overflow hidden

x-gif
  position absolute
  left 0
  top 0
  width 100%
  height 100%

.container, .commentContainer
  position absolute
  margin 0
  padding 0
  top 0
  left 0
  width 100%
  height 100%

  .comment
    position absolute
    left 100%
    white-space nowrap
    font-size 48px
    color #FFF
    z-index 10
    text-shadow 0 2px 0 #000, 2px 0 0 #000, 0 -2px 0 #000, -2px 0 0 #000, -2px -2px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000, 2px 2px 0 #000

.name
  position absolute
  top 0
  left 0
  width 100%
  height 100%

  p
    position relative
    top 50%
    -webkit-transform translateY(-50%)
    color #FFF
    font-size 160px
    text-align center
    margin 0
